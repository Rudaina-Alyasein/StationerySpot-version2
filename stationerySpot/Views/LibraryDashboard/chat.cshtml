@model List<User>
@{
    Layout = "LibraryDashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar: Students List -->
        <div class="col-md-3 border-end">
            <h5 class="mb-3">👥 Students</h5>
            @foreach(var user in Model){
                <div class="p-3 border-bottom chat-user" data-user-id="@user.Id" style="cursor: pointer;">
                    <strong>@user.Name</strong><br />
                    <small class="text-muted">@user.Email</small>
                </div>
            }
            
        </div>

        <!-- Chat Area -->
        <div class="col-md-9">
            <h5 class="mb-3">💬 Chat with: <strong>Sara Khalid</strong></h5>

            <!-- Chat Box -->
            <div class="border rounded p-3 mb-3" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                <div class="mb-2">
                    <strong>You:</strong> Hello Sara, how can I help you today?
                </div>
                <div class="mb-2">
                    <strong>Sara:</strong> I have a question about my graduation project.
                </div>
                <div class="mb-2">
                    <strong>You:</strong> Sure, go ahead.
                </div>
            </div>

            <!-- Message Input -->
            <div>
                <textarea class="form-control" rows="3" placeholder="Type your message..."></textarea>
                <button class="btn btn-primary mt-2">Send</button>
            </div>
        </div>
    </div>
</div>

