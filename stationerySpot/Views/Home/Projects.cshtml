@{
    Layout = "HomeLayout";

}
@model IEnumerable<stationerySpot.Models.Project>
@section Style {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Add Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css">
    <link rel="stylesheet" href="@Url.Content("~/assets/style/AcademicProject.css")">

}
<header class="page-header text-center">
    <div class="container position-relative">
        <h1 class="display-4 fw-bold mb-3">Academic Research Services</h1>
        <p class="lead">
            Order now your graduation project, academic research, or ready-made summary from our trusted
            libraries!
        </p>
    </div>
</header>

<div class="container">


    <section class="ready-projects">
        <h2 class="section-title">Ready-Made Projects</h2>
        <div class="row">
            @foreach (var project in Model)
            {
                <div class="col-md-4">
                    <div class="project-card">
                        <div class="project-image">
                            <img src="@project.ImageUrl" alt="Project Image">
                            <span class="project-type">@project.Type</span>
                            <span class="library-name">@project.Library?.Name</span>
                        </div>
                        <div class="project-content">
                            <h3>@project.Title</h3>
                            <p>@project.Description</p>
                            <div class="project-tags">
                                @foreach (var tag in project.Tags.Split(','))
                                {
                                    <span class="project-tag">@tag.Trim()</span>
                                }
                            </div>
                            <div class="project-footer">
                                <span class="project-price">JD @project.Price</span>
                                    <a href="/Chat/Chat?libraryId=@project.LibraryId" class="btn btn-outline-success btn-sm ml-5">
                                    Chat with Library
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </section>


   
</div>
@section Scripts {

}


