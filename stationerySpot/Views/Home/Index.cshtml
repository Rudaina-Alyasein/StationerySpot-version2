<div class="offers-section">
    <h3 class="offers-title text-center" style="color:#0097B2; font-size:32px; font-weight:900;">Latest Offers</h3>
    <div id="offersCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i += 3)
            {
                var slideOffers = Model.Skip(i).Take(3).ToList();
                var isActive = i == 0 ? "active" : "";
                <div class="carousel-item @isActive">
                    <div class="row justify-content-center g-3">
                        @foreach (var offer in slideOffers)
                        {
                            <div class="col-6 col-lg-4 @(slideOffers.Count < 3 && offer == slideOffers.Last() ? "d-none d-lg-block" : "")">
                                <div class="card">
                                    <img src="@offer.ImagePath" class="card-img-top" alt="Offer image" />
                                    <div class="card-body" style="color:rgba(0, 0, 0, 0.7)">
                                        <h5 class="card-title">@offer.Title</h5>
                                        <p class="card-text">@offer.Description</p>
                                        <h5 class="card-title">Available at: @offer.LibraryName</h5>
                                        <a class="btn btn-primary mt-2 ShopNow" href="@Url.Action("Offer2", "Home", new { id = offer.Id })">Shop now</a>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#offersCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#offersCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
