
@model IEnumerable<stationerySpot.Models.Product>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card pagination-card">
                    <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "/path/to/default-image.jpg" : product.ImagePath)"
                         class="card-img-top" alt="@product.Name"
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-price">JD @product.Price</p>
                        <div class="d-flex flex-column flex-sm-row justify-content-between">
                            <button type="button" class="btn btn-primary add-to-cart-btn mb-2 mb-sm-0"
                                    data-product-id="@product.Id">
                                Add to Cart
                            </button>
                            <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id })"
                               class="btn btn-secondary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products available.</p>
}
