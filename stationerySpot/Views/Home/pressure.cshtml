<!-- CSS (for chat and styling) -->

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #ff69b4;
        --accent-color: #3498db;
        --light-bg: #f8f9fa;
        --dark-text: #2c3e50;
    }

    body {
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        color: var(--dark-text);
    }

    /* Tabs Styling */
    .nav-tabs {
        border: none;
        margin-bottom: 2rem;
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 10px;
    }

        .nav-tabs .nav-link {
            border: none;
            color: var(--dark-text);
            padding: 1rem 2rem;
            border-radius: 10px;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
        }

            .nav-tabs .nav-link:hover {
                background: rgba(255, 105, 180, 0.1);
                color: var(--secondary-color);
            }

            .nav-tabs .nav-link.active {
                background: var(--secondary-color);
                color: white;
            }

    /* Testimonials Carousel */
    .testimonial-section {
        background: linear-gradient(135deg, #f6f8fd 0%, #ffffff 100%);
        padding: 4rem 0;
        margin-bottom: 3rem;
    }

    .testimonial-card {
        background: white;
        border-radius: 15px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        position: relative;
    }

        .testimonial-card::before {
            content: '"';
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 4rem;
            color: var(--secondary-color);
            opacity: 0.1;
            font-family: serif;
        }

    .carousel-control-prev,
    .carousel-control-next {
        width: 40px;
        height: 40px;
        background: var(--secondary-color);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        opacity: 1;
    }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background: #ff1493;
            opacity: 1;
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: brightness(0) invert(1);
    }

    .carousel-control-prev {
        left: -20px;
    }

    .carousel-control-next {
        right: -20px;
    }

    /* Project Cards */
    .project-card {
        height: 100%;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
    }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .project-card .card-img-top {
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .project-card:hover .card-img-top {
            transform: scale(1.05);
        }

        .project-card .card-body {
            padding: 2rem;
        }

        .project-card .card-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .project-card .card-text {
            color: #666;
            line-height: 1.6;
        }

    /* Chat Components */
    .chat-toggle {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--secondary-color);
        color: white;
        box-shadow: 0 5px 15px rgba(255, 105, 180, 0.3);
        border: none;
        transition: transform 0.3s ease;
        z-index: 1000;
    }

        .chat-toggle:hover {
            transform: scale(1.1);
        }

    .chat-box {
        position: fixed;
        bottom: 100px;
        right: 30px;
        width: 350px;
        height: 500px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        z-index: 999;
    }

    .chat-header {
        padding: 1rem;
        background: var(--secondary-color);
        color: white;
        border-radius: 20px 20px 0 0;
    }

    .chat-messages {
        height: calc(100% - 140px);
        overflow-y: auto;
        padding: 1rem;
    }

    .chat-input {
        padding: 1rem;
        border-top: 1px solid #eee;
    }

    /* Feedback Form */
    .feedback-section {
        background: linear-gradient(135deg, #ffffff 0%, #f6f8fd 100%);
        padding: 4rem 0;
        border-radius: 15px;
        margin-top: 3rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 0.8rem 1rem;
        border: 1px solid #e0e0e0;
    }

        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(255, 105, 180, 0.1);
            border-color: var(--secondary-color);
        }

    .btn-submit {
        background: var(--secondary-color);
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-submit:hover {
            background: #ff1493;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 105, 180, 0.2);
            color: white;
        }

    /* Testimonial Cards */
    .testimonial-card {
        background: white;
        border-radius: 20px;
        padding: 3rem 2rem;
        margin: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        text-align: center;
    }

    /* Project Cards */
    .project-card {
        height: 100%;
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(255, 105, 180, 0.1);
        }

        .project-card .card-img-top {
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .project-card:hover .card-img-top {
            transform: scale(1.05);
        }

        .project-card .card-body {
            background: white;
        }

    /* Form Controls */
    .form-floating > .form-control:focus,
    .form-floating > .form-control:not(:placeholder-shown) {
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            opacity: .65;
            transform: scale(.85) translateY(-0.5rem) translateX(0.15rem);
        }

    .form-control:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.25rem rgba(255, 105, 180, 0.25);
    }
</style>









